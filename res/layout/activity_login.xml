<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".LoginActivity" >

    <!-- Dummy item to prevent fields from receiving focus -->
    <EditText
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="-10dp" />

    <ImageView
        android:id="@+id/nature_background"
        android:layout_width="fill_parent"
        android:layout_height="343px"
        android:scaleType="center"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/nature_background" />

    <ImageView
        android:id="@+id/sun_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/sun_background" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/textfield_background"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/user_field" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/user_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/textfield_background"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/password_field" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/password_field"
        android:layout_below="@id/password_field"
        android:layout_marginTop="5dp"
        android:background="@drawable/loginbutton_background"
        android:text="@string/login_button"
        android:textColor="@color/light_text" />

</RelativeLayout>